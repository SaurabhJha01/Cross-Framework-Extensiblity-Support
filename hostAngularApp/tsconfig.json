{
  "compileOnSave": false,
  "compilerOptions": {
    "noImplicitUseStrict": true,
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "module": "es2020",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "paths": {
      "@angular/*": [
        "./node_modules/@angular/*"
      ]
  //  "base-app-lib": [
  //   // "dist/base-app-lib/base-app-lib",
  //   // "dist/base-app-lib"
  //  //  "projects/base-app-lib/src/public-api"
  //   ]
    },
    "lib": [
      "es2018",
      "dom"
    ]
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true
  }
}